<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns               = "http://xamarin.com/schemas/2014/forms"
    xmlns:x              = "http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios            = "clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea = "true"
    xmlns:local          = "clr-namespace:Stocks"
    Appearing            = "Handle_Appearing"
    BackgroundColor      = "Black"
    x:Class              = "Stocks.StockList">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:DateTimeConverter
                x:Key = "stringToDate" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width = "*" />
            <ColumnDefinition
                Width = "Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height = "Auto" />
            <RowDefinition
                Height = "Auto" />
            <RowDefinition
                Height = "Auto" />
        </Grid.RowDefinitions>
        <Entry
            Grid.Row          = "0"
            Grid.Column       = "0"
            Margin            = "20,0,10,0"
            x:Name            = "StockSearch"
            Placeholder       = "Stock Symbol"
            VerticalOptions   = "FillAndExpand"
            HorizontalOptions = "FillAndExpand"
            BackgroundColor   = "Gray"
            TextColor         = "White"
            Completed         = "RequestStockData" />
        <Button
            Grid.Row        = "0"
            Grid.Column     = "1"
            Margin          = "0,0,20,0"
            x:Name          = "SearchButton"
            Text            = "Get Stock"
            BackgroundColor = "Teal"
            TextColor       = "White"
            Padding         = "5"
            Clicked         = "RequestStockData" />
        <StackLayout
            Grid.Row        = "1"
            Grid.Column     = "0"
            Grid.ColumnSpan = "2"
            Orientation     = "Horizontal">
            <Label
                x:Name            = "HighestLabel"
                HorizontalOptions = "CenterAndExpand"
                TextColor         = "Lime" />
            <ActivityIndicator
                x:Name    = "LoadingIcon"
                Color     = "White"
                Scale     = "1.5"
                IsRunning = "false" />
            <Label
                x:Name            = "LowestLabel"
                HorizontalOptions = "CenterAndExpand"
                TextColor         = "Red" />
        </StackLayout>
        <ListView
            Grid.Row        = "2"
            Grid.Column     = "0"
            Grid.ColumnSpan = "2"
            x:Name          = "StocksListView"
            BackgroundColor = "Transparent"
            SeparatorColor  = "White"
            Margin          = "10,0,10,0"
            HasUnevenRows   = "true">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell
                        IsEnabled = "false">
                        <ViewCell.View>
                            <Grid
                                x:Name = "ListViewGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
                                        Width = "*" />
                                    <ColumnDefinition
                                        Width = "*" />
                                    <ColumnDefinition
                                        Width = "*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                        Height = "*" />
                                    <RowDefinition
                                        Height = "*" />
                                    <RowDefinition
                                        Height = "*" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row        = "0"
                                    Grid.Column     = "0"
                                    Grid.ColumnSpan = "3"
                                    TextColor       = "White"
                                    FontAttributes  = "Bold"
                                    Text            = "{Binding Key, Converter={StaticResource stringToDate}, StringFormat='{0:D}'}" />
                                <Label
                                    Grid.Row       = "1"
                                    Grid.Column    = "0"
                                    FontAttributes = "Bold"
                                    TextColor      = "Red"
                                    Text           = "High" />
                                <Label
                                    Grid.Row    = "2"
                                    Grid.Column = "0"
                                    TextColor   = "Red"
                                    Text        = "{Binding Value.The2High, StringFormat='{0:c2}'}" />
                                <Label
                                    Grid.Row       = "1"
                                    Grid.Column    = "1"
                                    FontAttributes = "Bold"
                                    TextColor      = "Lime"
                                    Text           = "Low" />
                                <Label
                                    Grid.Row    = "2"
                                    Grid.Column = "1"
                                    TextColor   = "Lime"
                                    Text        = "{Binding Value.The3Low, StringFormat='{0:c2}'}" />
                                <Label
                                    Grid.Row       = "1"
                                    Grid.Column    = "2"
                                    FontAttributes = "Bold"
                                    TextColor      = "Aqua"
                                    Text           = "Close" />
                                <Label
                                    Grid.Row    = "2"
                                    Grid.Column = "2"
                                    TextColor   = "Aqua"
                                    Text        = "{Binding Value.The4Close, StringFormat='{0:c2}'}" />
                            </Grid>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>